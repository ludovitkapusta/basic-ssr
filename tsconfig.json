{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "es6", "dom", "es2017"],
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "exclude": ["node_modules"]
}
