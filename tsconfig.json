{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./assets/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "es6", "dom", "es2017"],
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@routes/*": ["src/routes/*"]
    },
    "typeRoots": ["./extend-types.ts"]
  },
  "exclude": ["node_modules"]
}
